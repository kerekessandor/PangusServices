@model PangusServices.Models.CarDetail

@{
    ViewBag.Title = "Mentiuni";
}

@using (Html.BeginForm())
{
    @Html.HiddenFor(x => x.CarDetailID)
    @Html.HiddenFor(x => x.NrInmatricular)
    @Html.HiddenFor(x => x.CarTypeID)
    @Html.HiddenFor(x => x.AluminiuOtel)
    @Html.HiddenFor(x => x.DimensiuneaA)
    @Html.HiddenFor(x => x.KmRulati)
    @Html.HiddenFor(x => x.MarcaAuto)
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="form-group col-sm-6">
            <label>Mentiuni</label>
            @Html.TextAreaFor(x => x.Descriere, new { @class = "form-control" })
        </div>
    </div>

    <input type="submit" value="Salvare" class="btn btn-primary" />
    <a href="@Url.Action("Details", new { id = ViewBag.backToDetails })" class="btn btn-default">Inapoi</a>

}