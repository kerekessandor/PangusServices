@model IEnumerable<PangusServices.Models.Firme>

@{
    ViewBag.Title = "Firme";
}

<div class="panel panel-primary">
    <div class="panel-heading text-center">
        <b>Firme</b>
        <a href="@Url.Action("Create")" style="color:white" class="pull-right">Nou <i class="glyphicon glyphicon-plus"></i></a>
    </div>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Denumire</th>
                <th>RO</th>
                <th>CUI</th>
                <th>Adresa</th>
                <th>Modificare</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="6" class="text-center">GOL</td>
                </tr>
            }
            @foreach (var item in Model)
            {
                <tr onclick="location.href = '@(Url.Action("Details", "Firme", new { id = item.FirmeID }))'">
                    <td>@item.FirmeID</td>
                    <td><b>@item.Name</b></td>
                    <td>@item.Ro</td>
                    <td>@item.CUI</td>
                    <td>@item.Adresa</td>
                    <td>
                        @using (Html.BeginForm("Delete", "Firme", new { id = item.FirmeID }, FormMethod.Post, new { onclick = "return confirm('Doriti sa stergeti clientul definitiv?')" }))
                        {
                            @Html.ActionLink("Editare", "Edit", "Firme", new { id = item.FirmeID }, new { @class = "btn btn-primary btn-xs" });
                            <button class="btn btn-danger btn-xs">Stergere</button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@Html.ActionLink("Nou", "Create", "Firme", null, new { @class="btn btn-primary"})

