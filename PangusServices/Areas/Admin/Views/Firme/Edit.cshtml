@model PangusServices.Models.Firme

@{
    ViewBag.Title = "Editare " + Model.Name;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    @Html.HiddenFor(x => x.FirmeID)

    <div class="row">
        <div class="form-group-sm col-lg-3">
            <label>Denumire</label>
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        </div>

        <div class="form-group-sm col-lg-3">
            <label>Ro</label>
            @Html.TextBoxFor(x => x.Ro, new { @class = "form-control" })
        </div>

        <div class="form-group-sm col-lg-3">
            <label>CUI</label>
            @Html.TextBoxFor(x => x.CUI, new { @class = "form-control" })
        </div>

        <div class="form-group-sm col-lg-3">
            <label>Adresa</label>
            @Html.TextBoxFor(x => x.Adresa, new { @class = "form-control" })
        </div>
    </div>
    <br />
    <div class="btn-group-sm">
        <input type="submit" value="Modificare" class="btn btn-primary" />
        <a href="@Url.Action("Index")" class="btn btn-default">Inapoi</a>
    </div>
}

