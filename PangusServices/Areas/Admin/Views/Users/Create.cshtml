@model PangusServices.Models.CreateModels
@{
    ViewBag.Title = "Create New User";
}


@using (Html.BeginForm())
{
    @Html.ValidationSummary()
    
    <div class="form-group">
        <label>User Name</label>
        @Html.TextBoxFor(x => x.Name, new { @class="form-control"})
    </div>
    
    <div class="form-group">
        <label>Email</label>
        @Html.TextBoxFor(x => x.Email, new { @class="form-control"})
    </div>
    
    <div class="form-group">
        @Html.LabelFor(x => x.Password)
        @Html.TextBoxFor(x => x.Password, new { @class="form-control", type="password"})
    </div>
    
    <input type="submit" value="Salveaza" class="btn btn-primary" />
    <a href="@Url.Action("index")" class="btn btn-default">Inapoi</a>
    
}

