@model PangusServices.Models.Profil


@{
    ViewBag.Title = "Creare profil";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label>Denumire</label>
        @Html.TextBoxFor(x => x.Name, new { @class="form-control"})
        @Html.ValidationMessageFor(x => x.Name)
    </div>

    <div class="form-group">
        <label>Selecteaza anvelopa</label>
        @Html.DropDownList("AnvelopeID", null, "Selecteaza", new { @class="form-control"})
        @Html.ValidationMessageFor(x => x.AnvelopeID)
    </div>

    <input type="submit" value="Salveaza" class="btn btn-primary" />
    <a href="@Url.Action("Index")" class="btn btn-default">Inapoi</a>
}

