@model PangusServices.Models.Profil

@{
    ViewBag.Title = "Editare profil" + @Model.Name;
}

@using(Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.ProfilID)
    
    <div class="form-group">
        <label>Denumire</label>
        @Html.TextBoxFor(x => x.Name, new { @class="form-control"})
    </div>
    
    <div class="form-group">
        <label>Anvelopa</label>
        @Html.DropDownList("AnvelopeID", null, null, new { @class="form-control"})
    </div>
    
    <input type="submit" value="Salveaza" class="btn btn-primary" />
    <a href="@Url.Action("Index")" class="btn btn-default">Inapoi</a>
}

