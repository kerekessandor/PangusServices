@model PagedList.IPagedList<PangusServices.Models.Main>
@using PagedList.Mvc

@{
    ViewBag.Title = "Pangus baza de date";
}

<link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">

<div class="row form-group container-fluid">
    @using (Html.BeginForm("Index", "FDatabase", FormMethod.Get))
    {
        <div class="input-group col-lg-2 pull-right">
            @Html.TextBox("searchstring", ViewBag.CurrentFilter as string, new { @class = "form-control", id = "search", placeholder = "Cautare" })
            <span class="input-group-btn">
                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
            </span>
        </div>
    }
</div>

<div class="panel panel-primary">
    <div class="panel-heading text-center">
        <b>Baza de date</b>
    </div>
    <table class="table table-hover table-bordered">
        <thead>
            <tr>
                <th>Nr.Deviz</th>
                <th>Nr.Inmatriculare</th>
                <th>@Html.ActionLink("Nume / Client", "Index", new { sortOrder = ViewBag.NameSortParm })</th>
                <th>Prenume / Delegat</th>
                <th>Locatie</th>
                <th class="text-center">@Html.ActionLink("Data", "Index", new { sortOrder = ViewBag.DateSortParm })</th>
                <th class="text-center">Modificare</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="6" class="text-center">Nu sunt date in baza de date!</td>
                </tr>
            }
            @foreach (var item in Model)
            {
                <tr onclick="location.href = '@(Url.Action("Details", "Services", new { id = item.CustomerID, NrInmatricular = item.CarDetail.NrInmatricular }))'">
                    <td>@item.MainID</td>
                    <td>@Html.DisplayFor(x => item.CarDetail.NrInmatricular)</td>
                    @if (item.Customer.pFizica_pJuridica == true)
                    {
                        <td>@Html.DisplayFor(x => item.Customer.FirstName)</td>
                        <td>@Html.DisplayFor(x => item.Customer.LastName)</td>
                    }
                    else
                    {
                        <td>@Html.DisplayFor(x => item.Customer.Client)</td>
                        <td>@Html.DisplayFor(x => item.Customer.Delegat)</td>
                    }
                    @if (item.Sfantu_MCiuc == true)
                    {
                        <td>Sf.Gheorghe</td>
                    }
                    else
                    {
                        <td>M.Ciuc</td>
                    }
                    <td class="text-center">@Html.DisplayFor(x => item.Customer.Date)</td>
                    <td class="text-center">
                        @using (Html.BeginForm("Delete", "FDatabase", new { id = item.MainID }, FormMethod.Post, new { onclick = "return confirm('Doriti sa stergeti clientul definitiv?')" }))
                        {
                            @Html.ActionLink("Detalii | Editare", "Details", "Services", new { id = item.CustomerID, NrInmatricular = item.CarDetail.NrInmatricular }, new { @class = "btn btn-success btn-xs" })
                            <button type="submit" class="btn btn-danger btn-xs">Delete</button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="pull-right">
    <i class="text-center">Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount</i>

    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
</div>

@section Scripts
{
    <script src="~/Scripts/jquery-ui.js"></script>
    <script>
        $(function () {
            $("#search").autocomplete({
                source: '@Url.Action("alma")'
            });
        });
    </script>
}

