@model PagedList.IPagedList<PangusServices.Models.PangusServicii>
@using PagedList.Mvc

<link href="~/Content/PagedList.css" rel="stylesheet" />
<link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">

@{
    ViewBag.Title = "Servicii";
}

<div class="row form-group container-fluid">
    @using (Html.BeginForm("Index", "Servicii", FormMethod.Get))
    {
        <div class="input-group col-lg-2 pull-right">
            @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @class = "form-control", id = "txtSearch", placeholder = "Cautare" })
            <span class="input-group-btn">
                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
            </span>
        </div>
    }
</div>


<div class="panel panel-primary">
    <div class="panel-heading text-center">
        <b>Servicii</b>
        <a href="@Url.Action("Create")" style="color:white" class="pull-right">Nou <i class="glyphicon glyphicon-plus"></i></a>
    </div>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th class="text-center">
                    ID
                </th>
                <th>
                    @Html.ActionLink("Servicii", "Index", new { sortOrder = ViewBag.NameSortParm })
                </th>
                <th class="text-center">
                    @Html.ActionLink("Pret*", "Index", new { sortOrder = ViewBag.PriceSortParm })
                </th>
                <th>Categorie de dimensiune</th>
                <th class="col-lg-2 text-center">Depinde de anvelopa</th>
                <th class="text-center col-lg-2">Editare</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var servise in Model)
            {
                <tr>
                    <td class="text-center">@servise.ID</td>
                    <td>@servise.Name</td>
                    <td class="text-center">@servise.Price</td>
                    <td>@Html.DisplayFor(x => servise.dimType.Name)</td>
                    <td class="text-center">@Html.DisplayFor(x => servise.IsEditable)</td>
                    <td class="text-center">
                        @using (Html.BeginForm("Delete", "Servicii", new { id = servise.ID }, FormMethod.Post, new { onclick = "return confirm('Doriti sa stergeti clientul definitiv?')" }))
                        {
                            @Html.ActionLink("Editare", "Edit", new { id = servise.ID }, new { @class = "btn btn-primary btn-xs" })
                            <button class="btn btn-danger btn-xs">Sterge</button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="panel-footer">
        <div class="panel-info">
            <p><b>*Pret in Ron pentru 1Buc.</b></p>
        </div>
    </div>
</div>

<div class="pull-left">
    @Html.ActionLink("Nou", "Create", null, new { @class = "btn btn-primary" })
</div>

<div class="pull-right">
    <i class="text-center">Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount</i>

    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
</div>

@section scripts
{
 
<script src="~/Scripts/jquery-ui.js"></script>
    <script type="text/javascript">
        $(function () {
            $("#txtSearch").autocomplete({
                source: '@Url.Action("GetServices")'
            });
        });
    </script>
}



