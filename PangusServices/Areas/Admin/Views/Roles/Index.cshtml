@using PangusServices.Models
@using PangusServices.Infrastructure
@model IEnumerable<AppRole>

@{
    ViewBag.Title = "Szerepek";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        Roluri
    </div>
    <table class="table table-striped">
        <tr>
            <th>ID</th>
            <th>Rol</th>
            <th>Users</th>
            <th>Modificare</th>
        </tr>
        @if(Model.Count() == 0)
        {
            <tr>
                <td colspan="4" class="text-center">
                    GOL
                </td>
            </tr>
        }
        else
        {
            foreach(AppRole role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                    <td>
                        @if(role.Users == null || role.Users.Count == 0)    
                        {
                            @: No Users in Role
                        }
                        else
                        {
                            <p>@string.Join(", ", role.Users.Select(x => Html.GetUserName(x.UserId)))</p>
                        }
                    </td>
                    <td>
                        @using (Html.BeginForm("Delete", "Roles", new { id = role.Id }, FormMethod.Post, new { onclick = "return confirm('Doriti sa stergeti clientul definitiv?')" }))
                        {
                            @Html.ActionLink("Editare", "Edit", new { id = role.Id }, new { @class="btn btn-primary btn-xs"})
                            <button class="btn btn-danger btn-xs" type="submit">Stergere</button>
                        }
                    </td>
                </tr>
            }
        }
    </table>
</div>

@Html.ActionLink("Nou", "Create", null, new { @class = "btn btn-primary" })

