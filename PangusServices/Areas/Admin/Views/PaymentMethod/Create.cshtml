@model PangusServices.Models.PaymentMethod

@{
    ViewBag.Title = "Creeare modalitate de plata";
}

@using(Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-group">
        <label>Modalitate</label>
        @Html.TextBoxFor(x => x.Name, new { @class="form-control"})
    </div>
    
    <input type="submit" value="Salveaza" class="btn btn-primary" />
    <a href="@Url.Action("Index")" class="btn btn-default">Inapoi</a>
}

