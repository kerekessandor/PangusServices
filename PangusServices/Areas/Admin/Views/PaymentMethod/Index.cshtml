@model IEnumerable<PangusServices.Models.PaymentMethod>
@{
    ViewBag.Title = "Modalitati de plata";
}

<div class="panel panel-primary">
    <div class="panel-heading text-center">
        <b>Modalitati de plata</b>
        <a href="@Url.Action("Create")" style="color:white" class="pull-right">Nou <i class="glyphicon glyphicon-plus"></i></a>
    </div>

    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th class="col-sm-2">ID</th>
                <th class="col-sm-2">Modalitate</th>
                <th class="col-sm-2 text-center">Editare</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="4" class="text-center">
                        Gol
                    </td>
                </tr>
            }
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.PaymentMethodID</td>
                    <td>@item.Name</td>
                    <td>
                        @using (Html.BeginForm("Delete", "PaymentMethod", new { id = item.PaymentMethodID }, FormMethod.Post, new { onclick = "return confirm('Doriti sa stergeti clientul definitiv?')" }))
                        {
                            @Html.ActionLink("Editare", "Edit", new { id = item.PaymentMethodID }, new { @class = "btn btn-primary btn-xs" })
                            <button class="btn btn-danger btn-xs">Sterge</button>
                        }
                    </td>
                </tr>
            }


        </tbody>
    </table>
</div>

@Html.ActionLink("Nou", "Create", null, new { @class = "btn btn-primary" })

