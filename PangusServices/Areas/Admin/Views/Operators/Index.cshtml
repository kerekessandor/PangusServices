@model IEnumerable<PangusServices.Models.Operator>

@{
    ViewBag.Title = "Operatori";
}

<div class="panel panel-primary">
    <div class="panel-heading text-center">
        <b>Operatori</b>
        <a href="@Url.Action("Create")" style="color:white" class="pull-right">Nou <i class="glyphicon glyphicon-plus"></i></a>
    </div>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nume / Prenume</th>
                <th>Nr. Tel.</th>
                <th>Email</th>
                <th>Editare</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="6" style="text-align:center">GOL</td>
                </tr>
            }
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.OperatorID</td>
                    <th><i>@item.Name</i></th>
                    <td>@item.PhoneNumber</td>
                    <td>@item.Email</td>
                    <td>
                        @using (Html.BeginForm("Delete", "Operators", new { id = item.OperatorID }, FormMethod.Post, new { onclick = "return confirm('Doriti sa stergeti clientul definitiv?')" }))
                        {
                            @Html.ActionLink("Editare", "Edit", new { id = item.OperatorID }, new { @class= "btn btn-primary btn-xs"})
                            <button type="submit" class="btn btn-danger btn-xs">Stergere</button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="pull-left">
    @Html.ActionLink("Nou", "Create", null, new { @class = "btn btn-primary" })
</div>

