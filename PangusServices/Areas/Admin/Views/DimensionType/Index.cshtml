@model IEnumerable<PangusServices.Models.dimType>

@{
    ViewBag.Title = "Categorie dimensiuni";
}

<div class="row center-block">
    <div class="panel panel-primary">
        <div class="panel-heading text-center">
            <b>Categorie Dimensiuni</b>
            <a href="@Url.Action("Create")" style="color:white" class="pull-right">Nou <i class="glyphicon glyphicon-plus"></i></a>
        </div>
        <table class="table table-hover table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nume</th>
                    <th>Modificare</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() == 0)
                {
                    <tr>
                        <td colspan="3" class="text-center">
                            Gol
                        </td>
                    </tr>
                }
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.dimTypeID</td>
                        <td>@item.Name</td>
                        <td>
                            @using (Html.BeginForm("Delete", "DimensionType", new { id = item.dimTypeID }, FormMethod.Post, new { onclick = "return confirm('Doriti sa stergeti clientul definitiv?')" }))
                            {
                                @Html.ActionLink("Modificare", "Edit", new { id = item.dimTypeID }, new { @class = "btn btn-primary btn-xs" });
                                <button type="submit" class="btn btn-danger btn-xs">Stergere</button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@Html.ActionLink("Nou", "Create", "DimensionType", null, new { @class = "btn btn-primary" })


