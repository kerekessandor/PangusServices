@model PangusServices.Models.Customer


@{
    ViewBag.Title = "Create new Person";
}



@using (Html.BeginForm())
{
    @Html.ValidationSummary();
    @Html.AntiForgeryToken();

    <div class="row col-sm-offset-2">
        <div class="form-group col-sm-4">
            <label>Vezeték Név</label>
            @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control" })
        </div>

        <div class="form-group col-sm-4">
            <label>Kereszt Név</label>
            @Html.TextBoxFor(x => x.LastName, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <label>Email</label>
        @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Telefon számv</label>
        @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Autó</label>
        @Html.DropDownList("CarId", null, new { @class = "form-control" })
    </div>

    <input type="submit" value="Mentés" class="btn btn-primary" />
    <a href="@Url.Action("Index")" class="btn btn-default">Mégsem</a>
}

@section scripts{
    <script>
        $(document).ready(function () {
            
        });
    </script>
}

